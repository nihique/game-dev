<div id="gamecontainer">
  <canvas id="gamecanvas" width="640" height="480" class="gamelayer">
  </canvas>

  <div id="scorescreen" class="gamelayer">
    <img id="togglemusic" src="assets/images/frootwars/icons/sound.png" />
    <img src="assets/images/frootwars/icons/prev.png" />
    <span id="score">Score: 0</span>
  </div>

  <div id="gamestartscreen" class="gamelayer">
    <img src="assets/images/frootwars/icons/play.png" alt="Play Game" />
    <br />
    <img src="assets/images/frootwars/icons/settings.png" alt="Settings" />
  </div>

  <div id="levelselectscreen" class="gamelayer">
  </div>

  <div id="loadingscreen" class="gamelayer">
    <div id="loadingmessage"></div>
  </div>

  <div id="endingscreen" class="gamelayer">
    <div>
      <p id="endingmessage">
        The Level Is Over Message
      </p>
      <p id="playcurrentlevel">
        <img src="assets/images/frootwars/icons/prev.png" /> 
        Replay Current Level
      </p>
      <p id="playnextlevel">
        <img src="assets/images/frootwars/icons/next.png" /> 
        Play Next Level
      </p>
      <p id="showlevelscreen">
        <img src="assets/images/frootwars/icons/return.png" /> 
        Return to Level Screen
      </p>
    </div>
  </div>

</div>
